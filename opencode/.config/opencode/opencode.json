{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "copilot": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "GitHub Copilot",
      "options": {
	"timeout": 300000,
	"setCacheKey": true
      },
      "models": {
        "claude-opus-4-5": {
          "name": "Claude Opus 4.5",
          "limit": {
            "context": 200000,
            "output": 8000
          }
        },
        "claude-haiku-4-5": {
          "name": "Claude Haiku 4.5",
          "limit": {
            "context": 200000,
            "output": 8000
          }
        }
      }
    }
  },
  "model": "copilot/claude-opus-4-5",
  "small_model": "copilot/claude-haiku-4-5",
  "permission": {
	  "bash": "allow",
	  "edit": "allow",
	  "read": "allow",
	  "grep": "allow",
	  "glob": "allow",
	  "list": "allow",
	  "lsp": "allow",
	  "skill": "allow",
	  "todowrite": "allow",
	  "todoread": "allow",
	  "webfetch": "allow",
	  "question": "allow"
  },
    "compaction": {
    "auto": true,
    "prune": true
  },
  "theme": "everforest",
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    }
  }
}
