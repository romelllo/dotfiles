{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "github-copilot": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "GitHub Copilot",
      "options": {
	"timeout": 300000,
	"setCacheKey": true
      },
      "models": {
        "claude-opus-4-6": {
          "name": "Claude Opus 4.6",
          "limit": {
            "context": 200000,
            "output": 8000
          }
        },
        "claude-haiku-4-5": {
          "name": "Claude Haiku 4.5",
          "limit": {
            "context": 200000,
            "output": 8000
          }
        }
      }
    }
  },
  "model": "github-copilot/claude-opus-4-6",
  "small_model": "github-copilot/claude-haiku-4-5",
  "default_agent": "plan",
  "compaction": {
    "auto": true,
    "prune": true
  },
  "theme": "nord",
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    }
  }
}
